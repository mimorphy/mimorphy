{
    "clangd.fallbackFlags": [
        // ==================== 语言标准 ====================
        // 选项: -std=c++98, -std=c++11, -std=c++14, -std=c++17, -std=c++20, -std=c++23
        "-std=c++20",           // 使用 C++20 标准
        
        // ==================== 头文件包含路径 ====================
        // 格式: -I<路径> 或 -isystem<路径>
        // 区别: 
        //   -I: 常规包含路径
        //   -isystem: 系统头文件路径（警告更少）
        
        // 工作区路径
        "-I${workspaceFolder}/include",    // 项目自定义头文件
        "-I${workspaceFolder}/src",        // 源代码目录
        "-I${workspaceFolder}/lib",        // 第三方库
        
        // 使用 -isystem 标记系统路径（减少警告）
        "-isystem/usr/include",
        
        // ==================== 预处理器定义 ====================
        // 格式: -D<名称>[=<值>]
        "-DDEBUG",                          // 调试模式
        "-D_LIBCPP_ENABLE_EXPERIMENTAL=1"
    ],
