{
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "请输入clang++程序的路径",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++20",
                "-D_LIBCPP_ENABLE_EXPERIMENTAL=1",
                "-g", // 开启调试信息
                "-O3", // 启动最高级别优化
                "-I${workspaceFolder}/include", // 包含头文件路径
                "${workspaceFolder}/src/*.cpp", // 编译所有cpp文件
                "-o", // 输出可执行文件
                "${workspaceFolder}/build/test.exe" // 可执行文件的位置
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "problemMatcher": [
                "$codelldb-rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}