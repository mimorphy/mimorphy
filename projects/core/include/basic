#ifndef BASIC
#define BASIC

#include <cstdint>
#include <string>

using int8 = char;
using int16 = short;
using int32 = int;
using int64 = long long;
using intmin = int8;
using intmax = long long;
using nat8 = unsigned char;
using nat16 = unsigned short;
using nat32 = unsigned int;
using nat64 = unsigned long long;
using natmin = nat8;
using natmax = unsigned long long;
using sizevalue = size_t;
using float32 = float;
using float64 = double;
using address = size_t;
using character = char32_t;
using byte_array = std::string;
using str = std::u32string;
using str_view = std::u32string_view;
using byte = natmin;

constexpr intmax int8_max = 0x7F;
constexpr intmax int16_max = 0x7FFF;
constexpr intmax int32_max = 0x7FFFFFFF;
constexpr intmax int64_max = 0x7FFFFFFFFFFFFFFF;
constexpr intmax intmin_max = int8_max;
constexpr intmax intmax_max = 0x7FFFFFFFFFFFFFFF;
constexpr natmax nat8_max = 0xFF;
constexpr natmax nat16_max = 0xFFFF;
constexpr natmax nat32_max = 0xFFFFFFFF;
constexpr natmax nat64_max = 0xFFFFFFFFFFFFFFFF;
constexpr intmax natmin_max = nat8_max;
constexpr natmax natmax_max = 0xFFFFFFFFFFFFFFFF;
constexpr sizevalue sizevalue_max = 0xFFFFFFFFFFFFFFFF;
constexpr address address_max = natmax_max;
constexpr address character_max = nat32_max;

constexpr intmax int8_min = -128;
constexpr intmax int16_min = -32768;
constexpr intmax int32_min = -2147483648;
constexpr intmax int64_min = -9223372036854775807 - 1;
constexpr intmax intmin_min = int8_min;
constexpr intmax intmax_min = int64_min;

constexpr sizevalue BASE = 2;
constexpr sizevalue BYTE_LENGTH = 8;
constexpr sizevalue WORD_SIZE = 8;

#endif